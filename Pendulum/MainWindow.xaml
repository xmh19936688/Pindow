<local:PerformanceDesktopTransparentWindow x:Class="Pendulum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pendulum"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <!--设置透明边框的宽度，-1表示全部-->
        <WindowChrome GlassFrameThickness="-1"/>
    </WindowChrome.WindowChrome>
        <Window.Template>
        <ControlTemplate TargetType="Window">
            <!--设置透明边框-->
            <Border Background="Transparent">
                <!--内容正常显示-->
                <ContentPresenter ClipToBounds="True"/>
            </Border>
        </ControlTemplate>
    </Window.Template>
    <Grid>
        <Label Name="label" Content="00:00:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="SimHei" FontSize="72" FontWeight="Bold" Foreground="#7F0000FF"/>
    </Grid>
</local:PerformanceDesktopTransparentWindow>
